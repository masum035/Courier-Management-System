@model Courier_Management_System.Data_Access_Layer.DTOs.ShipmentDTO

@{
    ViewBag.Title = "title";
    ViewData["Title"] = "Delete Shipment";
    Layout = "_Layout";
}

<h2>Delete Shipment</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Shipment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Consignment Number
        </dt>
        <dd class = "col-sm-10">
            @Model.ConsignmentNumber
        </dd>
        <dt class = "col-sm-2">
            Pickup Date
        </dt>
        <dd class = "col-sm-10">
            @Model.PickupDate
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Model.Status
        </dd>
        <dt class = "col-sm-2">
            Shipper Info
        </dt>
        <dd class = "col-sm-10">
            @Model.ShipperInfo
        </dd>
        <dt class = "col-sm-2">
            Receiver Info
        </dt>
        <dd class = "col-sm-10">
            @Model.ReceiverInfo
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
